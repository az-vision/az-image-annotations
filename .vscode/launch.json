    "version": "0.2.0",
    "configurations": [
        {
            "name": "Process",
            "stopOnEntry": false,
            "type": "debugpy",
            "python": "${workspaceFolder}/.venv/scripts/python.exe",
            "request": "launch",
            "program": "process.py",
            "args": [
                "--transformation_name", "rgb",
                "--annotations_batch", "batch-001|batch-002",
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Train",
            "stopOnEntry": false,
            "type": "debugpy",
            "python": "${workspaceFolder}/.venv/scripts/python.exe",
            "request": "launch",
            "program": "train.py",
            "args": ["--epochs", "400"],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}